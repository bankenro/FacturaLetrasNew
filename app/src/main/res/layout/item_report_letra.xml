<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp" app:cardBackgroundColor="#230E0D0D" app:cardCornerRadius="4dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/logo"
                    android:id="@+id/imagen" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content" android:id="@+id/guideline3"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_percent="0.24"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:id="@+id/letra"
                    android:textSize="24sp" android:textColor="#3F51B5"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/factura"
                    app:layout_constraintStart_toEndOf="@+id/textView29" android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:id="@+id/factura"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/letra"
                    app:layout_constraintBottom_toTopOf="@+id/empresa"
                    app:layout_constraintStart_toEndOf="@+id/textView30" android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:id="@+id/empresa"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/factura"
                    app:layout_constraintBottom_toTopOf="@+id/fecha" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/textView31" android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="24dp" android:id="@+id/fecha"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/monto"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/empresa"
                    app:layout_constraintStart_toEndOf="@+id/textView32" android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:id="@+id/monto"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/fecha"
                    android:textSize="18sp" android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/estado"
                    app:layout_constraintStart_toEndOf="@+id/textView33" android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:id="@+id/estado" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/monto" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/textView34" android:layout_marginStart="8dp"/>
            <TextView
                    android:text="@string/letra"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView29" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline3"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView30" android:textSize="24sp"
                    app:layout_constraintEnd_toStartOf="@+id/letra"/>
            <TextView
                    android:text="@string/factura"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView30" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView29"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView31"
                    android:textSize="18sp" app:layout_constraintEnd_toStartOf="@+id/factura"
            />
            <TextView
                    android:text="@string/empresa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView31" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView30"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView32"
                    android:textSize="18sp" app:layout_constraintEnd_toStartOf="@+id/empresa"
            />
            <TextView
                    android:text="@string/fecha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView32" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView31"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView33" android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/fecha"/>
            <TextView
                    android:text="@string/monto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView33" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView32"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView34" android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/monto"/>
            <TextView
                    android:text="@string/estado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView34" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView33"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"
                    android:textSize="18sp" app:layout_constraintEnd_toStartOf="@+id/estado"
            />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>