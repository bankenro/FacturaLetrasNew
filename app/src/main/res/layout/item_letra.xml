<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp" app:cardBackgroundColor="#230E0D0D" app:cardCornerRadius="4dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher_round"
                    android:id="@+id/imagen" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content" android:id="@+id/guideline3"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_percent="0.24"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/letra"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    android:layout_marginStart="8dp"
                    android:textAlignment="center" android:textSize="24sp" android:textColor="#3F51B5"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/factura" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline8"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/factura"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/letra"
                    app:layout_constraintBottom_toTopOf="@+id/empresa"
                    app:layout_constraintEnd_toStartOf="@+id/guideline8" android:layout_marginEnd="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/empresa"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    android:layout_marginStart="8dp" android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/factura"
                    app:layout_constraintBottom_toTopOf="@+id/fecha" android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline8" android:layout_marginEnd="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/fecha"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    android:layout_marginStart="8dp"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/monto"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/empresa"
                    app:layout_constraintEnd_toStartOf="@+id/guideline8" android:layout_marginEnd="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/monto" app:layout_constraintStart_toStartOf="@+id/guideline3"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/fecha"
                    android:textSize="18sp" android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/estado"
                    app:layout_constraintEnd_toStartOf="@+id/guideline8" android:layout_marginEnd="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/estado"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    android:layout_marginStart="8dp" android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/monto" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline8" android:layout_marginEnd="8dp"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content" android:id="@+id/guideline8"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_percent="0.93"/>
            <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:id="@+id/menu" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline8"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0" tools:srcCompat="@mipmap/menu_item"
                    android:background="#00FFFFFF" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>